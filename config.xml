<?xml version='1.0' encoding='utf-8'?>
<widget id="com.technocube.rainingbud" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Raining Bud</name>
    <description>
        A fun and addictive mobile game where you catch falling objects to score points and unlock levels.
    </description>
    <author email="contact@technocube.com" href="https://technocube.com">
        Freedam
    </author>

    <!-- Content source -->
    <content src="index.html" />

    <!-- Network access -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <!-- Platform-specific intents -->
    <platform name="android">
        <allow-intent href="market:*" />

        <!-- Android-specific preferences -->
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="34" />
        <preference name="android-compileSdkVersion" value="34" />
        <preference name="AndroidWindowSoftInputMode" value="adjustNothing" />

        <!-- Icons - generated by cordova-res from 1024x1024 source -->
        <icon density="ldpi" src="resources/android/icon/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="resources/android/icon/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="resources/android/icon/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="resources/android/icon/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="resources/android/icon/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="resources/android/icon/drawable-xxxhdpi-icon.png" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <!-- iOS deployment target -->
        <preference name="deployment-target" value="12.0" />

        <!-- Icons for iOS (will be generated by cordova-res when needed) -->
        <icon src="www/assets/icon.png" />
    </platform>

    <!-- Global preferences -->
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />

    <!-- WebView preferences -->
    <preference name="Scheme" value="https" />
    <preference name="hostname" value="localhost" />
    <preference name="AllowBackForwardNavigationGestures" value="false" />

    <!-- Core plugins -->
    <plugin name="cordova-plugin-device" spec="^2.1.0" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.3" />
    <plugin name="cordova-plugin-network-information" spec="^3.0.0" />

    <!-- Security: Allow navigation to Supabase -->
    <allow-navigation href="https://czfrylnwekgvnpzklohj.supabase.co/*" />
    <allow-navigation href="https://cdn.jsdelivr.net/*" />
    <allow-navigation href="https://unpkg.com/*" />
    <allow-navigation href="https://esm.sh/*" />
</widget>
